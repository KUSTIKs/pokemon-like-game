{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@pokemon-game/assets/*": ["./src/assets/*"],
      "@pokemon-game/constants/*": ["./src/constants/*"],
      "@pokemon-game/utils/*": ["./src/utils/*"],
      "@pokemon-game/types/*": ["./src/types/*"],
      "@pokemon-game/data/*": ["./src/data/*"],
      "@pokemon-game/enums/*": ["./src/enums/*"],
      "@pokemon-game/maps/*": ["./src/maps/*"]
    }
  },
  "include": ["src"]
}
